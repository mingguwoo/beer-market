<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nio.ngfs.plm.bom.configuration.infrastructure.repository.mapper.BomsProductConfigMapper">

    <update id="remove" parameterType="com.nio.ngfs.plm.bom.configuration.infrastructure.repository.entity.BomsProductConfigEntity">
        update boms_product_config
        set del_flag    = 1,
            update_user = #{entity.updateUser}
        where id = #{entity.id}
          and del_flag = 0
    </update>

    <select id="queryLastPcByPcIdPrefix" resultType="com.nio.ngfs.plm.bom.configuration.infrastructure.repository.entity.BomsProductConfigEntity">
        select *
        from boms_product_config
        where pc_id like concat(#{pcIdPrefix}, '%')
        order by pc_id desc
        limit 1
    </select>

</mapper>
